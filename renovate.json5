{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    "github>aquaproj/aqua-renovate-config#1.10.0"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["aquaproj"],
      "automerge": true,
      "extends": ["schedule:weekends"]
    }
  ],
  "platformAutomerge": true,
  "registryAliases": {
    "chaos-mesh": "https://charts.chaos-mesh.org"
  }
}
